import java.util.Arrays;

public class MissingNumber {

    public int findMissingNumber(int[] arr) {
        int n = arr.length + 1;
        int expectedSum = n * (n + 1) / 2;
        int actualSum = 0;

        for (int num : arr) {
            actualSum += num;
        }

        return expectedSum - actualSum;
    }

    public static void main(String[] args) {
        MissingNumber finder = new MissingNumber();

        // Example 1
        int[] arr1 = {1, 2, 4, 5};
        int missing1 = finder.findMissingNumber(arr1);
        System.out.println("The missing number is: " + missing1); // Should be 3

        // Example 2
        int[] arr2 = {5, 1, 3, 2};
        int missing2 = finder.findMissingNumber(arr2);
        System.out.println("The missing number is: " + missing2); // Should be 4
    }
}
